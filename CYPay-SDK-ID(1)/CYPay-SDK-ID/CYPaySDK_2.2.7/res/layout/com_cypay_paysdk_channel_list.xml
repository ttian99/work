<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_cypay_paysdk_channel_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="@color/com_cypay_paysdk_view_gray" />

        <com.cypay.ui.MarqueeTextView
            android:id="@+id/com_cypay_paysdk_category_info"
            android:layout_width="@dimen/com_cypay_paysdk_max_width"
            android:layout_height="wrap_content"
            android:background="@drawable/com_cypay_paysdk_dialog_wallet_bg_selector"
            android:drawablePadding="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="@color/com_cypay_paysdk_view_gray" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/com_cypay_paysdk_channels_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/com_cypay_paysdk_channels_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>