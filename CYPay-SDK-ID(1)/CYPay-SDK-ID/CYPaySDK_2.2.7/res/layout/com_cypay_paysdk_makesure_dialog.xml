<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_cypay_paysdk_dialog_white"
    android:orientation="vertical"
    android:padding="15dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
         >

        <TextView
            android:id="@+id/com_cypay_paysdk_text"
            android:textColor="#555555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:text="@string/com_cypay_paysdk_give_up"
            android:textSize="@dimen/com_cypay_paysdk_makesure_dialog_text_size" />
        
        <LinearLayout 
            android:id="@+id/cents_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            >
        <RelativeLayout 
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/com_cypay_paysdk_makesure_dialog_cents_text_size"
                android:gravity="right"
                android:textColor="#555555"
                android:text="@string/com_cypay_paysdk_available_balance"
                />
            
              <TextView
            android:id="@+id/require_cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#555555"
            android:textSize="@dimen/com_cypay_paysdk_makesure_dialog_cents_text_size" />
            
        </RelativeLayout>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
       
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#555555"
                android:textSize="@dimen/com_cypay_paysdk_makesure_dialog_cents_text_size"
                android:gravity="right"
                android:text="@string/com_cypay_paysdk_need_genies"
                />
            
            <TextView
            android:id="@+id/current_all_cents"
            android:layout_alignParentRight="true"
            android:textColor="#555555"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/com_cypay_paysdk_makesure_dialog_cents_text_size" />
            
        </RelativeLayout>
        
        </LinearLayout>
        
       
        
        <EditText
            android:id="@+id/com_cypay_paysdk_edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_cypay_paysdk_edittext_bg"
            android:hint="@string/com_cypay_paysdk_new_pwd"
            android:layout_marginTop="10dp"
            android:numeric="decimal"
            android:password="true"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:singleLine="true"
            android:textSize="@dimen/com_cypay_paysdk_all_edit_font_size"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:textColorHint="#FFB2B2B2" />
        
                <TextView
            android:id="@+id/com_cypay_paysdk_text_errmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:textColor="#FFFF0000"
            android:text="@string/com_cypay_paysdk_give_up"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="13dip"
        android:layout_marginTop="15dip"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/com_mobogenie_mimo_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:layout_weight="1"
            android:minWidth="85dp"
            android:background="@drawable/com_cypay_paysdk_dialog_pay_btn"
            android:gravity="center"
            android:text="@string/com_cypay_paysdk_yes"
            android:textColor="@color/white"
            android:textSize="@dimen/com_cypay_paysdk_all_button_font_size"/>

        <Button
            android:id="@+id/com_mobogenie_mimo_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:minWidth="85dp"
            android:layout_weight="1"
            android:background="@drawable/com_cypay_paysdk_dialog_pay_btn_gray"
            android:gravity="center"
            android:text="@string/com_cypay_paysdk_no"
            android:textColor="@color/white"
            android:textSize="@dimen/com_cypay_paysdk_all_button_font_size"/>
    </LinearLayout>

</LinearLayout>