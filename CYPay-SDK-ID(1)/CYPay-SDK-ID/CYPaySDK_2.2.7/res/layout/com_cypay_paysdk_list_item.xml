<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_cypay_paysdk_topup_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_cypay_paysdk_dialog_wallet_bg_selector"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center_vertical"
    android:minHeight="37dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/com_cypay_paysdk_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:drawablePadding="5dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="@string/com_cypay_paysdk_topup_my_wallet"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/com_cypay_paysdk_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/com_cypay_paysdk_arrows"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|right"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#ffc3a28a"
        android:layout_marginRight="10dp"
        android:textSize="14sp" />

</LinearLayout>