<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
       <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        />
    
    <LinearLayout 
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        >
     <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1.0"
        />
     
        <TextView 
        android:text="@string/com_cypay_paysdk_string_manageaccountfragment_username_hint"
        android:id="@+id/username_label"
        android:textSize="16sp"
        android:gravity="left|center_vertical"
        android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
        android:layout_width="0dp"
        android:layout_weight="4.0"
        android:layout_height="wrap_content"
        />
     
    <TextView 
        android:id="@+id/username_tv"
        android:gravity="right|center_vertical"
        android:textSize="16sp"
        android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="7.0"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1.0"
        />
    </LinearLayout>
    

   <View 
       android:layout_width="fill_parent"
       android:layout_height="0.5dp"
       android:background="#EEEEEE"
       />
 
    
    
       <LinearLayout 
         android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        >
        
        <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1.0"
        />
        <TextView 
        android:text="@string/com_cypay_paysdk_string_manageaccountfragment_email_hint"
        android:id="@+id/email_label"
        android:textSize="16sp"
        android:gravity="left|center_vertical"
        android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
        android:layout_width="0dp"
        android:layout_weight="4.0"
        android:layout_height="wrap_content"
        />
        
        
        <TextView 
        android:id="@+id/email_tv"
        android:gravity="right|center_vertical"
        android:textSize="16sp"
        android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="7.0"
        android:layout_height="wrap_content"
        />
        
        <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1.0"
        />
        
    </LinearLayout>
      
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7.0"
        android:gravity="center_vertical"
        >
         
        <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.6"
        />
         
         <Button 
        android:id="@+id/submit_btn"
        android:visibility="invisible"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/com_cypay_paysdk_all_button_font_size"
        android:layout_width="0dp"
        android:layout_weight="8.8"
        android:layout_height="40dp"
        android:background="@drawable/com_cypay_paysdk_dialog_pay_btn"
        />
         
        <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.6"
        />
         
     </LinearLayout>
       
        
        
    
</LinearLayout>