<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_cypay_activity_usercenter_root"
    android:background="@drawable/color_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >

    <!-- 信息显示区（价格，产品名称） -->
	<LinearLayout 
    android:id="@+id/header"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/com_cypay_paysdk_product_info_bg"
    android:gravity="center"
    android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="64"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- 产品名称 -->
            <LinearLayout 
                 android:layout_marginTop="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center_vertical|right"
                 >
            <com.cypay.ui.MarqueeTextView
                android:id="@+id/com_cypay_paysdk_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxWidth="@dimen/com_cypay_paysdk_max_width"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/com_cypay_paysdk_production_font_size" />
           </LinearLayout>
            <!-- 价格 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal" >

              

                <TextView
                    android:id="@+id/com_cypay_paysdk_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/com_cypay_paysdk_head_amount_font_size" />
                
                  <TextView
                    android:id="@+id/com_cypay_paysdk_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/com_cypay_paysdk_production_font_size" />
            </LinearLayout>
        </LinearLayout>
        


        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="36"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/usercenter_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/com_cypay_sdk_usercenter_usericon" />

            <TextView
                android:id="@+id/com_cypay_paysdk_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/com_cypay_paysdk_head_username_font_size" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/com_cypay_paysdk_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="0dp"
                android:src="@drawable/com_cypay_paysdk_right_arrow"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

      </LinearLayout>

	   <LinearLayout 
                android:id="@+id/title"
                android:layout_below="@+id/header"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                >
                
           
         
                <TextView 
                    android:id="@+id/title_tv"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/com_cypay_paysdk_all_title_text_font_size"
                    android:text="@string/com_cypay_paysdk_string_user_center"
                    />
                
            </LinearLayout>
  

    <!-- 渠道横向列表的容器 -->
    
         <LinearLayout 
             android:id="@+id/body"
             android:background="#F5F5F5"
             android:layout_below="@+id/title"
             android:layout_above="@+id/bootom_notice"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             android:layout_marginBottom="0.1dp"
             >
                
             <LinearLayout 
                 android:id="@+id/credit_container"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:orientation="vertical"
                 > 
                 
                    
                 
                 <LinearLayout
        android:id="@+id/com_cypay_paysdk_channels_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/com_cypay_paysdk_content_bg">

        <!-- 安全支付 -->

            
        <ListView
            android:id="@+id/com_cypay_paysdk_topup_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#FFDBDBDB"
            android:dividerHeight="0.67dp" />
    </RelativeLayout>

             </LinearLayout> 
             
         </LinearLayout>

    <LinearLayout 
    android:id="@+id/bootom_notice"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="left|center_vertical"
    android:background="@color/com_cypay_paysdk_bottom_secure_notice_bg"
    >
    <ImageView
            android:background="@drawable/com_cypay_paysdk_secure_logo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
</LinearLayout>

</RelativeLayout>