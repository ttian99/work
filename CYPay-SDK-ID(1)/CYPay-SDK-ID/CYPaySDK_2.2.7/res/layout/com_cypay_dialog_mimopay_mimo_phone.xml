<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/com_cypay_paysdk_cypay_basemap_gray_01"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/com_cypay_paysdk_dialog_make_sure_bg"
        android:orientation="vertical"
        android:padding="8dip" >

        <TextView
            android:id="@+id/com_cypay_mimopay_phone_tip_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:lines="5"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/com_cypay_mimopay_phone_tip_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:text="@string/com_mobogenie_paysdk_mimo_tip_phone_info"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/com_cypay_mimopay_phone_tip_et"
            android:layout_width="300dip"
            android:layout_height="42dip"
            android:layout_marginTop="6dip"
            android:background="@drawable/com_cypay_paysdk_edittext_bg"
            android:numeric="integer"
            android:textColor="@color/com_mobogenie_paysdk_channels_text_price_color"
            android:textSize="@dimen/com_cypay_paysdk_all_edit_font_size" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="13dip"
            android:layout_marginBottom="13dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/com_mobogenie_mimo_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dip"
                android:layout_marginLeft="30dip"
                android:layout_weight="1"
                android:background="@drawable/com_cypay_paysdk_dialog_pay_btn"
                android:text="ok"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/com_cypay_paysdk_all_button_font_size" />

            <Button
                android:id="@+id/com_mobogenie_mimo_btn_cancel"
                android:layout_marginRight="30dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_weight="1"
                android:background="@drawable/com_cypay_paysdk_dialog_pay_btn"
                android:text="cancel"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/com_cypay_paysdk_all_button_font_size" />
        </LinearLayout>
</LinearLayout>