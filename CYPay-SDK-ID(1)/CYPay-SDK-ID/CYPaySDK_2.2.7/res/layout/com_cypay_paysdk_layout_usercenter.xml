<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_cypay_activity_usercenter_root"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        >
        
         <LinearLayout 
             android:id="@+id/body"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             >
             <LinearLayout 
                 android:id="@+id/cypay_container"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:background="#F5F5F5"
                 android:orientation="vertical"
                 > 
             
             
             <LinearLayout 
                 android:id="@+id/line1"
                 android:background="#FFFFFF"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 >
               <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <ImageView 
                    android:id="@+id/transaction_iv"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cpay_paysdk_transaction_detail_up"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignBottom="@+id/transaction_iv"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_usercenterfragment_transaction_detail"
                    />
            </RelativeLayout>
            
                    <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <ImageView 
                    android:id="@+id/charge_iv"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cypay_paysdk_charge_money"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_alignBottom="@+id/charge_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_usercenterfragment_recharge_balance"
                    />
            </RelativeLayout>
            
               
            
                <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <ImageView 
                    android:id="@+id/manage_amount_iv"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cypay_paysdk_manage_account_up"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_alignBottom="@+id/manage_amount_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_usercenterfragment_manage_account"
                    />
            </RelativeLayout>
                 
             </LinearLayout>
             
                <LinearLayout 
                 android:id="@+id/line2"
                 android:background="#FFFFFF"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 >
                
             
                 
                <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <ImageView 
                    android:id="@+id/cypay_service"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cypay_paysdk_service_up"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_alignBottom="@+id/cypay_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_usercenterfragment_user_service"
                    />
            </RelativeLayout>
            
                <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <ImageView 
                    android:id="@+id/question_iv"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cypay_paysdk_question_up"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_alignBottom="@+id/question_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_usercenterfragment_question_answer"
                    />
            </RelativeLayout>
            
                   <RelativeLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                >
                <ImageView 
                    android:id="@+id/security_iv"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cypay_paysdk_manage_more_games"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_alignBottom="@+id/security_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_securityfragment_promotions"
                    />
            </RelativeLayout>
                 
             </LinearLayout>
             
                
                
              <LinearLayout 
                 android:id="@+id/line3"
                 android:background="#FFFFFF"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 >
                
            
                   <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView 
                    android:scaleType="fitXY"
                     android:id="@+id/chargedetail_iv"
                     android:padding="0dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/com_cypay_paysdk_charge_detail_up"
                    />
                
                <TextView 
                    android:textColor="@color/com_cypay_paysdk_usercenter_content_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/chargedetail_iv"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="@dimen/com_cypay_paysdk_usercenter_label_font_size"
                    android:layout_marginBottom="10dp"
                    android:text="@string/com_cypay_paysdk_string_usercenterfragment_charge_detail"
                    />
            </RelativeLayout>
                 
             </LinearLayout>
             
             </LinearLayout> 
         </LinearLayout>
         
</ScrollView>
                  
    
</LinearLayout>