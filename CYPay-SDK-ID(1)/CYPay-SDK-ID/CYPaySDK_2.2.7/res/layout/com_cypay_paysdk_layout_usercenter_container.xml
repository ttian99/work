<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_cypay_activity_usercenter_root"
    android:background="@drawable/color_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >
    <!-- 为对称横屏的冗余布局 -->
    <LinearLayout 
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_linear"
        ></LinearLayout>
    
    <RelativeLayout 
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 为对称横屏的冗余代码 -->
        <LinearLayout 
            android:id="@+id/title_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    
     <LinearLayout
            android:id="@+id/header"
            android:background="@drawable/com_cypay_paysdk_product_info_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
        <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="64"
             android:gravity="center"
             android:orientation="vertical"
             >
             <LinearLayout 
                 android:layout_marginTop="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:gravity="center_vertical|right"
                 >
                <TextView
                android:id="@+id/balance_tv"
                android:text="@string/com_cypay_paysdk_string_uercenteractivity_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/com_cypay_paysdk_max_width"
                android:textColor="@android:color/white"
                android:textSize="@dimen/com_cypay_paysdk_production_font_size" />
                
                  <!-- 产品名称 -->
             </LinearLayout>
             

             <LinearLayout 
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 >
                 
                  <TextView
                android:id="@+id/amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/com_cypay_paysdk_max_width"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/com_cypay_paysdk_head_amount_font_size" />
                  
                        <TextView
                android:id="@+id/cents_tv"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/com_cypay_paysdk_string_uercenteractivity_cent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/com_cypay_paysdk_max_width"
                android:textColor="@android:color/white"
                android:textSize="@dimen/com_cypay_paysdk_production_font_size" />
                 
             </LinearLayout>
             
               
             
         </LinearLayout>
            
         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="36"
             android:gravity="center"
             android:orientation="vertical"
             >

              <LinearLayout
                android:id="@+id/home_linear"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >
                
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/com_cypay_sdk_usercenter_usericon"
                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/com_cypay_paysdk_head_username_font_size" />

                 <ImageView 
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/com_cypay_paysdk_right_arrow"
                    />
            
            </LinearLayout>
             
         </LinearLayout>
       

            
        </LinearLayout>
        
            <LinearLayout 
                android:layout_below="@+id/header"
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                >
                
           
         
                <TextView 
                    android:id="@+id/title_tv"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/com_cypay_paysdk_all_title_text_font_size"
                    android:text="@string/com_cypay_paysdk_string_user_center"
                    />
                
            </LinearLayout>
            
              <LinearLayout 
               android:layout_marginTop="0dp"
               android:paddingTop="0dp"
               android:orientation="vertical"
               android:background="@color/com_cypay_paysdk_bottom_secure_notice_bg"
               android:layout_alignParentBottom="true"
               android:gravity="center_vertical"
               android:id="@+id/bootom_notice"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               >
                  
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/com_cypay_paysdk_secure_logo" />
        
           </LinearLayout>
        
         <LinearLayout 
             android:id="@+id/body"
             android:background="#F5F5F5"
             android:paddingBottom="0dp"
             android:layout_marginBottom="0dp"
             android:layout_below="@+id/title"
             android:layout_above="@+id/bootom_notice"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             >
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/com_cypay_paysdk_all_line_color"
                    />
                
             <LinearLayout 
                 android:id="@+id/cypay_container"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:orientation="vertical"
                 android:layout_marginBottom="0dp"
                 android:paddingBottom="0dp"
                 > 

             </LinearLayout> 
             
         </LinearLayout>
         
         
                  
    
</RelativeLayout>