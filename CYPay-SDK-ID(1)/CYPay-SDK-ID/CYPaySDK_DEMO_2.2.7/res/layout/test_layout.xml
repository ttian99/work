<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/com_mobogenie_paysdk_shop_bar_02" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/com_mobogenie_paysdk_rainbow" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dip"
                android:background="@drawable/cypay_basemap_gray_01"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dip"
                    android:background="@color/title" />

                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="7.5dp"
                    android:paddingRight="7.5dp"
                    android:paddingTop="15dp" >
                    
                    <RadioGroup
                        android:id="@+id/control"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </RadioGroup>

                    <Button
                        android:id="@+id/payBtn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/control"
                        android:layout_marginTop="10dp"
                        android:text="Click to pay" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.5dip"
                    android:background="@drawable/com_mobogenie_paysdk_basemap_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>